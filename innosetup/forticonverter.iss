AppName={#MyAppName}
AppVersion={#MyAppVersion}
;AppVerName={#MyAppName} {#MyAppVersion}
DefaultDirName=%appdata%\{#MyAppName}
DisableDirPage=yes
DisableProgramGroupPage=yes
; Remove the following line to run in administrative install mode (install for all users.)
PrivilegesRequired=lowest
OutputDir=C:\Temp\forticonverter
OutputBaseFilename=SuperFortiConverter
Compression=lzma
SolidCompression=yes
WizardStyle=modern
SetupIconFile=C:\Users\dveg\Pictures\icon.ico

[Languages]
