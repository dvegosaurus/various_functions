Name: "{group}\SuperFortiConverter"; Filename: "{userappdata}\SuperFortiConverter\launch.cmd"; IconFilename: "{userappdata}\SuperFortiConverter\icon.ico"
Name: "{autodesktop}\SuperFortiConverter"; Filename: "{userappdata}\SuperFortiConverter\launch.cmd"; IconFilename: "{userappdata}\SuperFortiConverter\icon.ico"

[Run]
